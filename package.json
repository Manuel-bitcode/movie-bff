{
  "name": "movie-bff",
  "version": "1.0.0",
  "description": "Backend For Frontend - Movie API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate": "npm run lint && npm run build:check",
    "docker:build": "npm run validate && docker-compose build"
  },
  "author": "Manuel Martinez",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
